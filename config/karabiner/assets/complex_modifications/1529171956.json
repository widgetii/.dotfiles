{
  "title": "select_input_source example",
  "rules": [
    {
      "description": "Change input source to U.S. by left_command, RussianWin by right_command, Chinese by control, Arabic by Fn.",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_command",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_command"
            }
          ],
          "to_if_alone": [
            {
             "shell_command": "/opt/homebrew/bin/macism com.apple.keylayout.Colemak"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "right_command",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "right_command"
            }
          ],
          "to_if_alone": [
           {
             "shell_command": "/opt/homebrew/bin/macism com.apple.keylayout.Russian"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "left_control",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_control"
            }
          ],
          "to_if_alone": [
            {
             "shell_command": "/opt/homebrew/bin/macism com.apple.inputmethod.SCIM.ITABC"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "apple_vendor_top_case_key_code": "keyboard_fn",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "apple_vendor_top_case_key_code": "keyboard_fn"
            }
          ],
          "to_if_alone": [
            {
             "shell_command": "/opt/homebrew/bin/macism com.apple.keylayout.Arabic"
            }
          ]
        }
      ]
    },
    {
      "description": "Change input source to French while right_option is pressed.",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "right_option",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "select_input_source": {
                "language": "^fr$"
              }
            }
          ],
          "to_after_key_up": [
            {
              "select_input_source": {
                "language": "^en$"
              }
            }
          ]
        }
      ]
    }
  ]
}
