{
    "languageserver": {
        "clangd": {
            "command": "clangd",
            "args": ["-background-index"],
            "rootPatterns": ["compile_flags.txt", "compile_commands.json", ".vim/", ".git/", ".hg/"],
            "filetypes": ["c", "cpp", "objc", "objcpp"]
        },
        "golang": {
            "command": "gopls",
            "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
            "filetypes": ["go"]
        },
        "efm": {
            "command": "efm-langserver",
            "args": [],
            "filetypes": ["eruby", "markdown"]
        },
        "yaml": {
            "command": "yaml-language-server",
            "args": ["--stdio"],
            "filetypes": ["yaml", "yaml.ansible"],
            "trace.server": "verbose",
            "settings": {
                "yaml": {
                    "trace": {
                        "server": "verbose"
                    },
                    "schemas": {
                        "kubernetes": "/**",
                        "http://json.schemastore.org/ansible-stable-2.5": "infra_gil/*"
                    },
                    "format": {
                        "enable": true
                    },
                    "validate": true,
                    "completion": true,
                    "hover": true
                }
            },
        },
        "bash": {
            "command": "bash-language-server",
            "args": ["start"],
            "filetypes": ["sh"],
            "ignoredRootPaths": ["~"]
        },
        "groovy": {
            "command": "java",
            "args": ["-jar", "/usr/local/bin/groovy-language-server-all.jar"],
            "filetypes": ["groovy"]
        },
        "dockerfile": {
            "command": "docker-langserver",
            "filetypes": ["Dockerfile"],
            "args": ["--stdio"]
        },
        "metals": {
            "command": "metals-vim",
            "rootPatterns": ["build.sbt"],
            "filetypes": ["scala", "sbt"]
        },
        "terraform": {
            "command": "terraform-lsp",
            "filetypes": ["terraform"],
            "initializationOptions": {}
        }
    },
    "suggest.snippetIndicator": "ðŸŒŸ",
    "suggest.noselect": false,
    "diagnostic.errorSign": "âœ—",
    "diagnostic.warningSign": "âš ",
    "diagnostic.infoSign": "â€¢",
    "diagnostic.hintSign": "Î»",
    "codeLens.enable": true,
    "java.errors.incompleteClasspath.severity": "ignore",
    "python.formatting.provider": "black",
    "python.formatting.blackArgs": [
        "--line-length=80",
        "--target-version=py37"
    ],
    "python.linting.enabled": false,
    "python.linting.mypyEnabled": true,
    "python.linting.mypyArgs": [
        "--follow-imports=silent",
        "--show-column-numbers",
        "--cache-dir /tmp/mypy/"
    ]
}
